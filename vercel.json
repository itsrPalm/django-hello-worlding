{
	"version": 2,
	"builds": [
		{
			"src": "src/api/wsgi.py",
			"use": "@vercel/python",
			"config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
		},
		{
			"src": "build_files.sh",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "src/staticfiles"
			}
		}
	],
	"routes": [
		{
			"src": "static/(.*)",
			"dest": "static/$1"
		},
		{
			"src": "/(.*)",
			"dest": "src/api/wsgi.py"
		}
	]
}
